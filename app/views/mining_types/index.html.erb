<p style="color: green"><%= notice %></p>

<h1><%= t("new.mining_type") %></h1>

<div id="coins">
<table class = "table table-dark table-striped">
<thead>
<tr >
    <td><%= t("activerecord.attributes.mining_type.description") %></td>
    <td><%= t("activerecord.attributes.mining_type.acronym") %></td>
    
  </tr>
</thead>
  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronyn %></td>
        <td><%= link_to t("links.show"), mining_type %></td>
        <td><%= link_to t("links.edit"), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t("links.destroy"), mining_type, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to t("links.new"), new_mining_type_path, class: "btn btn-primary" %>
